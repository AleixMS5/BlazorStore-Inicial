@page "/login"
@attribute [AllowAnonymous]
@layout MainLayout

<div class="row login-page">
	<div class="col-12 col-md-6 px-3 login-wrap">
        <h2 class="featured-title">Log in</h2>
        <div class="px-5">
            <p class="text-center">
                Si es un usuario registrado de BlazorStore, <br />
                por favor inicie sesión con sus credenciales.
            </p>
            <LoginForm></LoginForm>
        </div>
    </div>
    <div class="col-12 col-md-6 signup-wrap px-3">
        <h2 class="featured-title">Register</h2>
        <div class="px-5">
            <p class="text-center">
                Si es un cliente nuevo de BlazorStore, por favor <br />

crea una nueva cuenta rellenando el siguiente formulario.</p>
            <RegistrationForm></RegistrationForm>
        </div>
    </div>
</div>